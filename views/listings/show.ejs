<% layout("/layouts/boilerplate") %>

<style>
    .show-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }
    
    .listing-images {
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }
    
   .main-image {
    width: 100%;
    height: 300px;
    max-width: 800px;
    object-fit: cover;
    border-radius: 16px;
    margin: 0 auto;
    display: block;
}
    
    .host-section {
        display: flex;
        align-items: center;
        padding: 1.5rem 0;
        border-bottom: 1px solid #ebebeb;
    }
    
    .review-avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 1rem;
        background: linear-gradient(45deg, #fe424d, #ff6b6b);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
        font-size: 1.2rem;
    }
    
    .review-card {
        border-radius: 12px;
        border: 1px solid #ebebeb;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        background: white;
        transition: transform 0.2s ease;
    }
    
    .review-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    
    .review-header {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
    }
    
    .rating-stars {
        color: #ffc107;
        margin-left: auto;
    }
    
    .section-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin: 2rem 0 1rem 0;
        color: #222222;
        border-bottom: 2px solid #fe424d;
        padding-bottom: 0.5rem;
    }
    
    .action-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        flex-wrap: wrap;
    }
    
    .btn-edit {
        background: linear-gradient(45deg, #fe424d, #ff6b6b);
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        color: white;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }
    
    .btn-edit:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(254, 66, 77, 0.4);
        color: white;
    }
    
    .btn-delete {
        background: #6c757d;
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        color: white;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-delete:hover {
        background: #5a6268;
        transform: translateY(-2px);
    }

    /* Review Form Styles */
    .review-form-section .card {
        border-radius: 16px;
        background: linear-gradient(135deg, #fff5f5, #ffffff);
    }
    
    .stars-container {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
    }
    
    .star-label {
        font-size: 2rem;
        color: #ddd;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .star-label:hover {
        color: #ffc107;
        transform: scale(1.1);
    }
    
    input[type="radio"]:checked + .star-label {
        color: #ffc107;
    }
    
    input[type="radio"]:checked + .star-label ~ .star-label {
        color: #ffc107;
    }
    
    .stars-container:hover .star-label {
        color: #ffc107;
    }
    
    .star-label:hover ~ .star-label {
        color: #ddd;
    }
    
    .form-control {
        border-radius: 12px;
        border: 2px solid #ebebeb;
        padding: 1rem;
        font-size: 1rem;
        transition: all 0.3s ease;
    }
    
    .form-control:focus {
        border-color: #fe424d;
        box-shadow: 0 0 0 0.2rem rgba(254, 66, 77, 0.1);
    }
    
    .btn-danger {
        background: linear-gradient(45deg, #fe424d, #ff6b6b);
        border: none;
        border-radius: 12px;
        padding: 1rem 2rem;
        font-size: 1.1rem;
        transition: all 0.3s ease;
    }
    
    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(254, 66, 77, 0.4);
    }

    .price-badge {
        background: linear-gradient(45deg, #fe424d, #ff6b6b);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 1.2rem;
    }

    @media (max-width: 768px) {
        .main-image {
            height: 300px;
        }
        
        .action-buttons {
            flex-direction: column;
        }
        
        .btn-edit, .btn-delete {
            width: 100%;
            text-align: center;
        }
    }
</style>

<div class="show-container">
    <!-- Image -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="listing-images">
                <img src="<%= listing.image.url %>" class="main-image" alt="<%= listing.title %>">
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Left Column - Listing Info -->
        <div class="col-lg-6">
            <!-- Header Section -->
            <div class="mb-4">
                <h1 class="fw-bold mb-2"><%= listing.title %></h1>
                <div class="d-flex align-items-center text-muted mb-3 flex-wrap">
                    <i class="fa-solid fa-location-dot me-2 text-danger"></i>
                    <span class="me-3"><%= listing.location %>, <%= listing.country %></span>
                    <span class="badge bg-gradient rounded-pill me-3"><%= listing.category %></span>
                    <span class="price-badge">₹<%= listing.price.toLocaleString("en-IN") %> / night</span>
                </div>
            </div>

            <!-- Host Information -->
            <div class="host-section">
                <div class="review-avatar">
                    <%= listing.owner.username.charAt(0).toUpperCase() %>
                </div>
                <div>
                    <h5 class="mb-1">Hosted by <%= listing.owner.username %></h5>
                    <p class="text-muted mb-0">Superhost · 5 years hosting</p>
                </div>
            </div>

            <!-- Description -->
            <div class="mb-5">
                <h3 class="section-title">About this place</h3>
                <p class="lead"><%= listing.description %></p>
            </div>

            <!-- Action Buttons for Owner -->
            <% if(currentUser && listing.owner._id.equals(currentUser._id)) { %>
                <div class="action-buttons">
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-edit">
                        <i class="fa-solid fa-pen me-2"></i>Edit Listing
                    </a>
                    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this listing?')">
                            <i class="fa-solid fa-trash me-2"></i>Delete Listing
                        </button>
                    </form>
                </div>
            <% } %>
        </div>

        <!-- Right Column - Reviews & Review Form -->
        <div class="col-lg-6">
            <div class="reviews-sidebar">
                <!-- Review Form Section -->
                <% if(currentUser && (!listing.owner._id.equals(currentUser._id))) { %>
                <div class="review-form-section mb-5">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body p-4">
                            <h4 class="card-title mb-4">
                                <i class="fa-solid fa-pen-to-square me-2 text-danger"></i>
                                Write a Review
                            </h4>
                            
                            <form action="/listings/<%= listing._id %>/reviews" method="POST" id="reviewForm">
                                <!-- Rating Stars -->
                                <div class="rating-input mb-4">
                                    <label class="form-label fw-semibold mb-3">How was your stay?</label>
                                    <div class="stars-container">
                                        <% for(let i = 1; i <= 5; i++) { %>
                                            <input type="radio" id="star<%= i %>" name="review[rating]" value="<%= i %>" class="d-none" required>
                                            <label for="star<%= i %>" class="star-label">
                                                <i class="fa-regular fa-star"></i>
                                            </label>
                                        <% } %>
                                    </div>
                                    <small class="text-muted mt-2 d-block">Click to rate from 1 to 5 stars</small>
                                </div>

                                <!-- Comment Textarea -->
                                <div class="mb-4">
                                    <label for="reviewComment" class="form-label fw-semibold">Your Review</label>
                                    <textarea 
                                        name="review[comment]" 
                                        id="reviewComment" 
                                        class="form-control" 
                                        rows="5" 
                                        placeholder="Share your experience with this property..."
                                        required
                                    ></textarea>
                                    <div class="form-text">Tell others about your stay - what you loved, and what could be better.</div>
                                </div>

                                <!-- Submit Button -->
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-danger btn-lg fw-semibold">
                                        <i class="fa-solid fa-paper-plane me-2"></i>
                                        Submit Review
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <% } %>

                <!-- Reviews Section -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="section-title mb-0">
                        <i class="fa-solid fa-star me-2"></i>
                        Reviews · <%= listing.reviews.length %>
                    </h3>
                </div>

                <% if(listing.reviews.length > 0) { %>
                    <% listing.reviews.forEach(function(review) { %>
                        <div class="review-card">
                            <div class="review-header">
                                <div class="review-avatar">
                                    <%= review.author.username.charAt(0).toUpperCase() %>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1"><%= review.author.username %></h6>
                                    <small class="text-muted"><%= review.createdAt.toLocaleDateString() %></small>
                                </div>
                                <div class="rating-stars">
                                    <% for(let i = 0; i < review.rating; i++) { %>
                                        <i class="fa-solid fa-star"></i>
                                    <% } %>
                                    <% for(let i = review.rating; i < 5; i++) { %>
                                        <i class="fa-regular fa-star"></i>
                                    <% } %>
                                </div>
                            </div>
                            <p class="mb-0"><%= review.comment %></p>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="fa-solid fa-comment-slash fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No reviews yet</h5>
                        <p class="text-muted">Be the first to review this property!</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>


<script>
    // Star rating interaction
    document.addEventListener('DOMContentLoaded', function() {
        const starLabels = document.querySelectorAll('.star-label');
        
        starLabels.forEach((label, index) => {
            label.addEventListener('click', function() {
                // Reset all stars
                starLabels.forEach(star => {
                    star.querySelector('i').className = 'fa-regular fa-star';
                });
                
                // Fill stars up to clicked one
                for (let i = 0; i <= index; i++) {
                    starLabels[i].querySelector('i').className = 'fa-solid fa-star';
                }
            });
            
            label.addEventListener('mouseenter', function() {
                for (let i = 0; i <= index; i++) {
                    starLabels[i].style.color = '#ffc107';
                }
                for (let i = index + 1; i < starLabels.length; i++) {
                    starLabels[i].style.color = '#ddd';
                }
            });
        });
        
        // Reset stars on mouse leave
        const starsContainer = document.querySelector('.stars-container');
        if (starsContainer) {
            starsContainer.addEventListener('mouseleave', function() {
                const checkedStar = document.querySelector('input[type="radio"]:checked');
                if (checkedStar) {
                    const index = Array.from(document.querySelectorAll('input[type="radio"]')).indexOf(checkedStar);
                    for (let i = 0; i <= index; i++) {
                        starLabels[i].style.color = '#ffc107';
                    }
                    for (let i = index + 1; i < starLabels.length; i++) {
                        starLabels[i].style.color = '#ddd';
                    }
                } else {
                    starLabels.forEach(star => {
                        star.style.color = '#ddd';
                    });
                }
            });
        }
    });
</script>