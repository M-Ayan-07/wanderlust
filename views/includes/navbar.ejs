        <% if(!currentUser){ %>
          <a class="nav-link" href="/signup">
            <i class="fa-solid fa-user-plus d-lg-none"></i>
            <span class="d-none d-lg-inline"><b>Sign up</b></span>
          </a>
          <a class="nav-link" href="/login">
            <i class="fa-solid fa-right-to-bracket d-lg-none"></i>
            <span class="d-none d-lg-inline"><b>Log in</b></span>
          </a>
        <% } %>
        
        <% if(currentUser){ %>
          <a class="nav-link" href="/logout">
